<Window x:Class="WPF.VaccineAddUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="VaccineAddUpdateWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="VaccineName"/>
            <TextBox x:Name="txtVaccineName"/>

            <Label Content="Price" />
            <TextBox x:Name="txtPrice" />

            <Label Content="Description" />
            <TextBox x:Name="txtDescription"/>

            <Label Content="DosesTimes" />
            <TextBox x:Name="txtDosesTimes" />

            <Button Content="Save" x:Name="btnSave" Click="btnSave_Click" />
        </StackPanel>
    </Grid>
</Window>
