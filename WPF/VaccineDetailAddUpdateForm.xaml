<Window x:Class="WPF.VaccineDetailAddUpdateForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="VaccineDetailAddUpdateForm" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="EntryDate"/>
            <DatePicker x:Name="txtEntryDate"/>

            <Label Content="Quantity" />
            <TextBox x:Name="txtQuantity" />

            <Label Content="Status" />
            <ComboBox x:Name="txtStatus"/>

            <Label Content="Vaccine" />
            <ComboBox x:Name="txtVaccine" />

            <Button Content="Save" x:Name="btnSave" Click="btnSave_Click" />
        </StackPanel>
    </Grid>
</Window>
